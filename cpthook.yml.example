http:
    listen: ":8086"

logging:
    level: "INFO"

irc:
    host: "irc.hackint.eu"
    port: 6667
    ssl:
        enabled: true
        cafile: "/etc/ssl/hackint.pem"
        client_cert:
            certfile: "/home/bot/bot.cert"
            keyfile: "/home/bot/bot.key"
    nickname: "webhook-bot"
    auth:
        method: SASL-Plain
        username: "webhook-bot"
        password: "VerySecure!"

modules:
    status:
        enabled: true
    prometheus:
        enabled: true
        channel: "#prometeusChannel"
        hostname_filter: "(\\w*)\\.company.com:\\d{4}"
    gitlab:
        enabled: true
        default: "#defaultChannel"
        groups:
            "myGitlabGroup":
                - "#groupChannel"
        explicit:
            "myGitlabGroup/mySpecialGitlabProject":
                - "#specificChannel"
    simple:
        enabled: True
        default_channel: "#defaultChannel"
    travis:
        enabled: True
        default_channel: "#defaultChannel"

